<p id="notice"><%= notice %></p>


      
<div class="container">
  <% @posts.each do |post| %>
    <div class="col s12 m7">
      <h3 class="header"><%= post.title %></h3>
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content">
            <p><%= post.body %></p>
          </div>
          <div class="card-action">
            <a><%= link_to 'Read More...', post %></a>
          </div>
        </div>
      </div>
    </div>
    
    <a><%= link_to 'Edit', edit_post_path(post), class: "waves-effect waves-light btn" %></a>
    <a><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn" %></a> 
  <% end %>
</div>